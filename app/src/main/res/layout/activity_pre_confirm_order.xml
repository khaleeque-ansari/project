<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PreConfirmOrder">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/appbarPreOrder"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!--main Toolbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarConfirmOrder"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.AppBarLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Confirm order"
        android:id="@+id/btnConfirm"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:layout_below="@id/appbarPreOrder"
        android:layout_above="@id/btnConfirm"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_below="@id/toolbarConfirmOrder"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:layout_above="@+id/btnConfirm">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TOTAL BILL"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                android:layout_marginTop="9dp"
                card_view:cardElevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="0dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Rs. 198"
                        android:id="@+id/txtCO_TotalPrice"
                        android:layout_marginTop="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:textSize="40sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Inclusive of all taxes)"
                        android:id="@+id/textView11"
                        android:layout_below="@id/txtCO_TotalPrice"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView4"
                        android:background="#cc3f3f"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REDEEM POINTS"
                android:id="@+id/textView4kjlkkjhkjh"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1jk"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                android:layout_marginTop="9dp"
                card_view:cardElevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:foregroundGravity="center"
                    android:gravity="center">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="You have zero points to redeem"
                        android:id="@+id/txtCO_Redeem"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_weight="5" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Redeem"
                        android:id="@+id/btnCO_ReedeamPoint"
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ractangle_filled_color_primary"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APPLY COUPON"
                android:id="@+id/textView4kjlk"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                android:layout_marginTop="9dp"
                card_view:cardElevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="7"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true">


                    <EditText
                        android:windowSoftInputMode="stateHidden"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_weight="5"
                        android:background="@drawable/ractangle_color_primary"
                        android:id="@+id/edtCO_CoupounCode"
                        android:padding="5dp"
                        android:inputType="textCapCharacters" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="Apply"
                        android:id="@+id/btnCO_CoupounCode"
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/ractangle_filled_color_primary"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRING ME CHANGE"
                android:id="@+id/textView4kljl"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1KLJL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                android:layout_marginTop="9dp"
                card_view:cardElevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:foregroundGravity="center"
                    android:gravity="center">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="100"
                        android:textColor="@android:color/darker_gray"
                        android:id="@+id/btnCO_BringChange_100"
                        android:layout_weight="1"
                        android:background="@drawable/btn_change_selector"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="500"
                        android:textColor="@android:color/darker_gray"
                        android:id="@+id/btnCO_BringChange_500"
                        android:layout_weight="1"
                        android:background="@drawable/btn_change_selector"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:text="1000"
                        android:textColor="@android:color/darker_gray"
                        android:id="@+id/btnCO_BringChange_1000"
                        android:layout_weight="1"
                        android:background="@drawable/btn_change_selector"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAYMENT METHODS"
                android:id="@+id/textView4"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <android.support.v7.widget.CardView
                android:id="@+id/card1KLJLK"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="3dp"
                android:layout_marginTop="9dp"
                card_view:cardElevation="2dp"
                android:padding="10dp"
                android:layout_marginBottom="0dp">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:foregroundGravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash on delivery"
                        android:id="@+id/textView4KJLKJHKJ"
                        android:layout_marginTop="5dp" />



                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
