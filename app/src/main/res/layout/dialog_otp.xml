<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.firsteat.rentnmore.activity.MobileRegOTP">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="MOBILE NUMBER REGISTRATION"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/username_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@id/username_text_input_layout">

            <EditText
                android:id="@+id/edtOTPMobile"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:hint="Mobile number"
                android:maxLength="10"
                android:inputType="number|phone"
                android:padding="5dp"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

      <!--  <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@id/username_text_input_layout"
            android:nextFocusUp="@id/username_text_input_layout">

            <EditText
                android:id="@+id/edtOTPOTP"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_selector"
                android:hint="OTP"
                android:inputType="textWebPassword"
                android:padding="5dp"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>-->

