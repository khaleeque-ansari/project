<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:foregroundTint="#c1131313"

                android:src="@drawable/img"/>




            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_thumbnail"
                android:id="@+id/relativeLayout"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="10dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zero oil Egg Sandwich"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtName"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 65"
                    android:id="@+id/txtPrice"
                    android:layout_below="@id/txtName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/txtPrice">
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/btnSub"
                       android:background="@drawable/icn_down"/>
                    <TextView
                        android:id="@+id/txtCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/colorAccent"/>
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/btnAdd"
                        android:background="@drawable/icn_up"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:layout_below="@+id/txtPrice"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp">

                    <!-- container cal.-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:id="@+id/imgCal"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="65dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_color_primary"/>
                            <TextView
                                android:id="@+id/txtCal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="0"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_below="@id/imgCal"
                            android:layout_height="15dp"
                            android:gravity="center_horizontal"
                            android:text="Cal"/>
                    </RelativeLayout>
                    <!-- container cal.-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:id="@+id/imgCal2"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="60dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_color_primary"/>
                            <TextView
                                android:id="@+id/txtFiber"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="0"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_below="@id/imgCal2"
                            android:layout_height="15dp"
                            android:gravity="center_horizontal"
                            android:text="Fiber."/>
                    </RelativeLayout>
                    <!-- container cal.-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:id="@+id/imgCal3"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_color_primary"/>
                            <TextView
                                android:id="@+id/txtCarb"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="0"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_below="@id/imgCal3"
                            android:layout_height="15dp"
                            android:gravity="center_horizontal"
                            android:text="Carb."/>
                    </RelativeLayout>
                    <!-- container cal.-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:id="@+id/imgCal4"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_color_primary"/>
                            <TextView
                                android:id="@+id/txtProtein"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="0"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_below="@id/imgCal4"
                            android:layout_height="15dp"
                            android:gravity="center_horizontal"
                            android:text="Protein"/>
                    </RelativeLayout>
                    <!-- container cal.-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="75dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:id="@+id/imgCal5"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="fill_parent"
                                android:layout_height="75dp"
                                android:layout_weight="1"
                                android:background="@drawable/circle_color_primary"/>
                            <TextView
                                android:id="@+id/txtFat"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="0"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_below="@id/imgCal5"
                            android:layout_height="15dp"
                            android:gravity="center_horizontal"
                            android:text="Fat"/>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>

            <!--frame for buttons over images-->
            <!--Details frame-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/relativeLayout"
                android:visibility="visible">

               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:orientation="vertical"
                   android:background="@android:color/black"
                   android:alpha="0.8"
                   android:gravity="center"
                   android:visibility="gone"
                   android:id="@+id/frameImgDetails">
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Product Description"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:textColor="#ffffff"
                       android:textStyle="bold" />
                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="Medium Text"
                       android:id="@+id/txtDetails"
                       android:layout_gravity="center"
                       android:textColor="#ffffff"
                       android:gravity="center"
                      />
                   <TextView
                       android:layout_marginTop="10dp"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:text="Best Suited For"
                       android:layout_gravity="center"
                       android:textColor="#ffffff"
                       android:gravity="center"
                       android:textStyle="bold" />
                   <TextView
                       android:id="@+id/txtBestSuited"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="for fitness freeks"
                       android:layout_gravity="center"
                       android:textColor="#ffffff"
                       android:gravity="center"
                       />
               </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/relativeLayout"
                    android:visibility="visible"
                    android:id="@+id/frameImgBtns">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp">
                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/btnFav"
                            android:background="@drawable/icn_favurite"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_stock"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textStyle="bold"
                        android:layout_gravity="right|top"
                        android:gravity="center_vertical|end"
                        android:textColor="#fff"
                        android:background="#81000000"

                        android:text="sold out"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/icn_egg_up"
                        android:layout_alignTop="@+id/btnFav"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="left|top"
                        android:id="@+id/imgRv_menu_category" />

                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:id="@+id/frameClickable"
                android:layout_above="@+id/relativeLayout"
                android:visibility="visible"></FrameLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>